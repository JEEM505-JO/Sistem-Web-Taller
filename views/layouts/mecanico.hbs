    {{>aside}}

    {{! Content Wrapper. Contains page content }}
    <div class="content-wrapper">
      {{! Content Header (Page header) }}
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1>Empleados</h1>
            </div>
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="./">Inicio</a></li>
                <li class="breadcrumb-item active">Empleados</li>
              </ol>
            </div>
          </div>
        </div>{{! /.container-fluid }}
      </section>
      {{! Main content }}
      <section class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-12">
              <div class="card-body">
                <form action="/mecanico" method="post">
                  <div class="row">
                    <div class="col-md-8">
                      <div class="card card-primary">
                        <div class="card-header">
                          <h3 id="title" class="card-title">Datos del Empleado</h3>
                        </div>
                        <div class="card-body">
                          <div class="row">
                            <input type="text" name="IDMecanico" value={{maxId}} style="display: none;">
                           <div class="form-group col-md-6">
                            <label for="Nombre">Nombres</label>
                            <input name="Nombre" required title="Nombre solo acepta letras y espacios en blanco"
                              class="form-control" type="text">
                          </div>
                          <div class="form-group col-md-6">
                            <label for="Apellido">Apellidos</label>
                            <input name="Apellido" required title="" class="form-control" type="text">
                          </div>
                          </div>
                          <div class="row">
                          <div class="form-group col-md-6">
                            <label for="Estado">Estado</label>
                            <div class="input-group">
                              <select name="Estado" required class="form-control" title="Estado" id="Estado">
                                <option value="1">
                                  <span>Activo</span>
                                </option>
                                <option value="0">
                                  <span>Inactivo</span>
                                </option>
                              </select>
                            </div>
                          </div>
                          <div class="form-group col-md-6">
                            <label for="CodEspecialidad">Especialidad</label>
                              <select name="CodEspecialidad" required title="Seleccionar especialidad" class="form-control" id="idespecialidad">
                                {{#each especialidades}}
                                  <option value="{{this.CodEspecialidad}}">{{this.CodEspecialidad}}</option>
                                {{/each}}
                              </select>
                          </div>
                          </div>
                          <div class="form-group">
                            <label for="JefeTaller">Jefe</label>
                            <div class="input-group">
                              <select name="JefeTaller" class="form-control" required title="Jefe" id="Jefe">
                                {{#each empleados}}
                                  <option value={{this.id}}>{{this.Nombre}}</option>
                                {{/each}}
                              </select>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="card card-primary">
                        <div class="card-header">
                          <h3 class="card-title">Acciones</h3>
                        </div>
                        <div class="card-body pb-3 pt-4">
                          <div class="form-group">
                            <button type="submit" class="btn btn-primary"> <i class="fa fa-plus nav-icon pr-2"></i>
                              Agregar</button>
                            <button type="button" class="btn btn-default   float-right"> <i
                                class="fa fa-trash nav-icon pr-2"></i>Limpiar</button>
                          </div>
                          <div class="form-group">
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
              <div class="card">
                <div class="card-header">
                  <h3 class="card-title">Registro de los Datos de Clientes</h3>
                </div>
                {{! /.card-header }}
                <div class="card-body">
                  <table id="example2" class="table table-bordered table-hover">
                    <thead>
                      <tr>
                        <th>Id Empleado</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Jefe</th>
                        <th>Id Especialidad</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                      </tr>
                    </thead>
                    <tbody>
                      {{#each jefe}}
                        <tr style="background-color: #cbcbcb;">
                          <td>{{this.IDMecanico}}</td>
                          <td>{{this.Nombre}}</td>
                          <td>{{this.Apellido}}</td>
                          <td>Jefe del Taller</td>
                          <td>{{this.CodEspecialidad}}</td>
                          <td>{{this.Estado}}</td>
                          <td>
                        </tr>
                      {{/each}}
                      {{#each rows}}
                        <tr>
                          <td>{{this.IDMecanico}}</td>
                          <td>{{this.Nombre}}</td>
                          <td>{{this.Apellido}}</td>
                          <td>{{this.JefeTaller}}</td>
                          <td>{{this.CodEspecialidad}}</td>
                          <td>{{this.Estado}}</td>
                          <td>
                            <a href="#title" class="btn btn-edit" data-estado={{this.Estado}} data-idmecanico={{this.IDMecanico}} data-nombre={{this.Nombre}} data-apellido={{this.Apellido}} data-jefe="{{this.JefeTaller}}" data-especialidad="{{this.CodEspecialidad}}">
                            <i class="nav-icon fas fa-edit" data-estado={{this.Estado}} data-idmecanico={{this.IDMecanico}} data-nombre={{this.Nombre}} data-apellido={{this.Apellido}} data-jefe="{{this.JefeTaller}}" data-especialidad="{{this.CodEspecialidad}}"></i>
                          </a>
                          <button class="btn btn-delete" data-idmecanico={{this.IDMecanico}}>
                            <i class="nav-icon fas fa-trash" data-idmecanico={{this.IDMecanico}}></i>
                          </button>
                          </td>
                        </tr>
                      {{/each}}
                    </tbody>
                  </table>
                </div>
                {{! /.card-body }}
              </div>
              {{! /.card }}
            </div>
            {{! /.col }}
          </div>
          {{! /.row }}
        </div>
        {{! /.container-fluid }}
      </section>
      {{! /.content }}
    </div>
    {{! /.content-wrapper }}
    <aside class="control-sidebar control-sidebar-dark">
      {{! Control sidebar content goes here }}
    </aside>
{{>footer}}

  <script>
    const d = document,
    $inputID = d.querySelector('input[name="IDMecanico"]'),
    $inputNombre = d.querySelector('input[name="Nombre"]'),
    $inputApellido = d.querySelector('input[name="Apellido"]'),
    $selectEstado = d.querySelector('select[name="Estado"]'),
    $selectEspecialidad = d.querySelector('select[name="CodEspecialidad"]'),
    $selectJefe = d.querySelector('select[name="JefeTaller"]')

    d.addEventListener('click', e => {
      if(e.target.matches('.btn.btn-edit>*, .btn.btn-edit')){
        $inputID.value = e.target.dataset.idmecanico
        $inputNombre.value = e.target.dataset.nombre
        $inputApellido.value = e.target.dataset.apellido 
        $selectEstado.value = e.target.dataset.estado 
        $selectEspecialidad.value = e.target.dataset.especialidad
        $selectJefe.value = e.target.dataset.jefe
      }

      if(e.target.matches('.btn.btn-delete>*, .btn.btn-delete')){
        Swal.fire({
          title: 'Esta seguro que desea eliminar este registro?',
          text: "No sera capaz de revertir esto",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#3085d6',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Si, estoy seguro',
          cancelButtonText: 'Cancelar'
        }).then((result) => {
          if (result.isConfirmed) {
            let options = {
              method: 'delete',
              headers: {
                'Content-Type': 'aplication/json;charset=utf-8'
              },
              body: e.target.dataset.idmecanico
            }
            const del = fetch(`http://localhost:3000/mecanico/${options.body}`, options)
              .then(checkResponseStatus)
              .then(res => res.json())
              .then(json =>{
                
                if(json.message === 'error') {
                    Swal.fire({
                      title : json.alertTitle,
                      html : json.alertMessage,
                      icon : json.icon,
                      showConfirmButton : json.showConfirmButton,
                      timer : json.timer
                    }).then(()=>{
                      window.location.reload()
                    })
                  }
                else if(json.message === 'ok') {
                    Swal.fire({
                      title : json.alertTitle,
                      html : json.alertMessage,
                      icon : json.icon,
                      showConfirmButton : json.showConfirmButton,
                      timer : json.timer
                    }).then(()=>{
                      window.location.reload()
                    })
                  }
              })
              .catch(err => console.log(1, err))
          }
        })
    function checkResponseStatus(res) {
      if(res.ok){
        return res
      } else {
        throw new Error(`The HTTP status of the reponse: ${res.status} (${res.statusText})`);
      }
    }
  }if(e.target.matches('.btn.btn-default')){
    $inputID.value = null
    $inputNombre.value = null
    $inputApellido.value = null
    $selectEstado.value = null
    $selectEspecialidad.value = null
    $selectJefe.value = null
  }
})
</script>

