{{>header}}

<body class="hold-transition sidebar-mini  layout-fixed">
  <div class="wrapper">
    <!-- Navbar -->
    {{>nav}}
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    {{>aside}}

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1>Modelo</h1>
            </div>
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="./">Vehículo</a></li>
                <li class="breadcrumb-item active">Modelo</li>
              </ol>
            </div>
          </div>
        </div><!-- /.container-fluid -->
      </section>

      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-12">
              <div class="card-body">
                <form action="/modelo" method="post">
                  <div class="row">
                    <div class="col-md-8">
                      <div class="card card-primary">
                        <div class="card-header">
                          <h3 id="title" class="card-title">Datos del Modelo de Vehículo</h3>
                        </div>

                        <div class="card-body">
                          <div class="row">
                            <div class="form-group col-6">
                            <label for="IDModelo">IDModelo</label>
                            {{#each maxId}}
                            <input id="IDModelo" name="IDModelo" readonly title="Modelo" class="form-control" type="text" 
                            value={{maxId}}> 
                            {{/each}}

                            {{#each Idmarca}}
                            <input name="IDMarca" readonly class="form-control" style="display: none;" type="text" value={{Idmarca}}> 
                            {{/each}}

                          </div>
                          <div class="form-group col-6">
                            <label for="NombreModelo">Modelo</label>
                            <input name="NombreModelo" required title="Modelo" class="form-control" type="text">
                          </div>
                          </div>
                          <div class="form-group">
                            <label for="Marca">Marca</label>
                            <div class="input-group">
                              <div class="input-group-prepend">
                                <button type="button" class="btn btn-warning dropdown-toggle" id="btn_Action"
                                  data-toggle="dropdown" aria-expanded="true">
                                  Seleccionar Acción
                                </button>
                                <ul class="dropdown-menu" style="font-family: Arial, Helvetica, sans-serif;">
                                  <li  class="dropdown-item drop-new" style="padding: 0;">
                                    <a id="btn_new" class="link btn--new" style="display:flex; margin-left:1rem; cursor:pointer;">Nueva</a>
                                  </li>
                                  <li class="dropdown-divider" ></li>
                                  <li class="dropdown-item drop-register" style="padding: 0;">
                                    <a id="btn_register" class="link btn--register" 
                                    style="display:flex; margin-left: 1rem; cursor:pointer;">Registradas</a>
                                  </li>
                                </ul>
                              </div>
                              <input id="todestroy" class="form-control" type="text" readonly>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="card card-primary">

                        <div class="card-header">
                          <h3 class="card-title">Acciones</h3>
                        </div>

                        <div class="card-body pb-2 pt-3 ">
                          <div class="form-group">
                            <button type="submit" class="btn btn-primary"> <i class="fa fa-plus nav-icon pr-2"></i>
                              Agregar</button>
                            <button type="button" class="btn btn-default   float-right"> <i
                                class="fa fa-trash nav-icon pr-2"></i>Limpiar</button>
                          </div>
                        </div>
                      </div>


                      <div class="card card-secondary">
                        <div class="card-header">
                          <h4 class="card-title">Formulario de Vehículos</h4>
                        </div>
                        <div class="card-body p-3">
                          <a href="/vehiculo" type="button" class="btn btn-outline-secondary">
                            Ir al formulario de Vehiculos<i
                              class="fa fa-angle-double-right float-right pl-2 nav-icon"></i>
                          </a>
                        </div>
                      </div>
                    </div>
                  </div>
                </form>
              </div>

              <div class="card">
                <div class="card-header">
                  <!-- Consulta de los Modelos INNER JOIN Marcas -->
                  <h3 class="card-title">Registro de los Modelos y Marcas</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                  <table id="example2" class="table table-bordered table-hover">
                    <thead>
                      <tr>
                        <th>Id Modelo</th>
                        <th>Modelo</th>
                        <th>Id Marca</th>
                        <th>Marca</th>
                        <th>Acciones</th>
                      </tr>
                    </thead>
                    <tbody>
                      {{#each registros }}
                      <tr>
                        <td>{{this.IDModelo}}</td>
                        <td>{{this.NombreModelo}}</td>
                        <td>{{this.IDMarca}}</td>
                        <td>{{this.NombreMarca}}</td>
                        <td>
                          <a href="#title" class="btn btn-edit" data-idmodelo={{this.IDModelo}}
                            data-modelo={{this.NombreModelo}} data-idmarca={{this.IDMarca}}
                            data-marca={{this.NombreMarca}}>
                            <i class="nav-icon fas fa-edit" data-idmodelo={{this.IDModelo}}
                              data-modelo={{this.NombreModelo}} data-idmarca={{this.IDMarca}}
                              data-marca={{this.NombreMarca}}></i>
                          </a>
                          <button class="btn btn-delete" data-idmodelo={{this.IDModelo}}>
                            <i class="nav-icon fas fa-trash" style="flex: 1;" data-idmodelo={{this.IDModelo}}></i>
                          </button>
                        </td>
                      </tr>
                      {{/each}}
                    </tbody>

                  </table>

                  <!-- /.card-body -->
                </div>
              </div>
              <!-- /.card -->
            </div>
            <!-- /.col -->
          </div>
          <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->


   {{>footer}}

  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>    
    const maxIDmarca = `{{ Idmarca}}`

    console.log(maxIDmarca)
    const marcas =
      `{{#each marca}}
      <option value={{this.IDMarca}}>{{this.NombreMarca}}</option>
    {{/each}}`

    const d = document;

    const createSelectMarcas = () => {
      const $select = d.createElement('select')
      $select.className = 'form-control'
      $select.setAttribute('name', 'marca')
      $select.innerHTML = marcas
      return $select;
    }

    const createInputMarca = () => {
      const $inputMarca = d.createElement('input')
      $inputMarca.className = 'form-control';
      $inputMarca.setAttribute('name', 'marca')
      return $inputMarca;
    }

    const $inputModelo = d.querySelector('input[name="Modelo"]')
    const $btnAction = d.getElementById('btn_Action')
    const $btnNuevo = d.getElementById('btn_new')
    const $btnRegistrados = d.getElementById('btn_register')
    const $inputIdModelo = d.getElementById('IDModelo')
    const $divInputGroupPrepend = d.querySelector('.input-group-prepend')

    d.addEventListener('click', e => {
      if (e.target === $btnNuevo || e.target === $btnRegistrados) {
        if (d.getElementById('todestroy')) {
          d.getElementById('todestroy').parentNode.removeChild(d.getElementById('todestroy'));
        }

        if (e.target === $btnNuevo ) {
          $btnAction.textContent = $btnNuevo.textContent
          if (document.querySelector("select[name='marca']") != null) {

            d.querySelector('select[name="marca"]').parentNode.removeChild(d.querySelector('select[name="marca"]'))
          }
          if (document.querySelector("input[name='marca']") == null) {

            $divInputGroupPrepend.insertAdjacentElement('afterend', createInputMarca())
          }
        }
        else if (e.target === $btnRegistrados) {
          $btnAction.textContent = $btnRegistrados.textContent
          if (document.querySelector("input[name='marca']") != null) {

            d.querySelector('input[name="marca"]').parentNode.removeChild(d.querySelector('input[name="marca"]'))
          }
          if (document.querySelector("select[name='marca']") == null) {
            $divInputGroupPrepend.insertAdjacentElement('afterend', createSelectMarcas())
          }
        }
      }

      if (e.target.matches('.btn.btn-edit > *, .btn.btn-edit')) {

        d.querySelector('input[name="NombreModelo"]').value = e.target.dataset.modelo;
        $btnAction.textContent = $btnNuevo.textContent

        if (d.getElementById('todestroy')) {
          d.getElementById('todestroy').parentNode.removeChild(d.getElementById('todestroy'));
        }
        if (document.querySelector("select[name='marca']") != null) {
          d.querySelector('select[name="marca"]').parentNode.removeChild(d.querySelector('select[name="marca"]'))
        }
        if (document.querySelector("input[name='marca']") == null) {
          $divInputGroupPrepend.insertAdjacentElement('afterend', createInputMarca())
        }
        d.querySelector('input[name="marca"]').value = e.target.dataset.marca
        $inputIdModelo.value = e.target.dataset.idmodelo
        d.querySelector('input[name="marca"]').setAttribute('readonly','true')
      }
      if (e.target.matches('.btn.btn-delete > *, .btn.btn-delete')) {
        Swal.fire({
          title: 'Esta seguro que desea eliminar este registro?',
          text: "No sera capaz de revertir esto",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#3085d6',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Si, estoy seguro',
          cancelButtonText: 'Cancelar'
        }).then((result) => {
          if (result.isConfirmed) {
            let options = {
              method: 'delete',
              headers: {
                'Content-Type': 'aplication/json;charset=utf-8'
              },
              body: e.target.dataset.idmodelo
            }
            const del = fetch(`http://localhost:3000/modelo/${options.body}`, options)
              .then(() => {
                Swal.fire(
                  'Borrado!',
                  'El registro ha sido borrado.',
                  'success'
                ).then(() => {
                  window.location.reload()
                })
              })
          }
        })
      }
      
    })

  </script>
