  <script>
    const d = document,
    $selectMecanico = d.querySelector('select[name="mecanico"]'),
    $selectCheckin = d.querySelector('select[name="checkin"]'),
    $inputFechaIn = d.querySelector('input[name="FechaIngreso"]'),
    $inputFechaOut = d.querySelector('input[name="FechaSalida"]'),
    $inputId = d.querySelector('input[name="id"]'),
    $inputIdasing = d.querySelector('input[name="idasign"]')
    initialValues()
    
    d.addEventListener('click', e =>{
      if(e.target.matches('.btn.btn-edit > *, .btn.btn-edit')){
        let getMecanico = Array.from($selectMecanico.options).find(opt => Number.parseInt(opt.value) === Number.parseInt(e.target.dataset.mecanico))

        $selectMecanico.value = ( typeof getMecanico === "undefined") ? null : getMecanico.value
        $selectCheckin.value = e.target.dataset.codcheckin
        $inputFechaIn.value = e.target.dataset.fechainicio
        $inputFechaOut.value = e.target.dataset.fechafin
        //onUpdate 
        $inputId.value = e.target.dataset.idorden
        $inputIdasing.value = e.target.dataset.idordenasig
      }
      if(e.target.matches('.btn.btn-delete > *, .btn.btn-delete')){
        Swal.fire({
          title: 'Esta seguro que desea eliminar este registro?',
          text: "No sera capaz de revertir esto",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#3085d6',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Si, estoy seguro',
          cancelButtonText: 'Cancelar'
        }).then((result) => {
          if (result.isConfirmed) {
            let options = {
              method: 'delete',
              headers: {
                'Content-Type': 'aplication/json;charset=utf-8'
              },
              body: e.target.dataset.idorden
            }
            const del = fetch(`http://localhost:3000/orden/${options.body}`, options)
              .then(() => {
                Swal.fire(
                  'Borrado!',
                  'El registro ha sido borrado.',
                  'success'
                ).then(() => {
                  window.location.reload()
                })
              })
          }
        })
      }
    })

    d.addEventListener('DOMContentLoad', e =>{
      initialValues()
    })

    function initialValues (){
      $selectCheckin.value = null
      $selectMecanico.value = null
      $inputFechaIn.value = null
      $inputFechaOut.value = null
    }
  </script>
