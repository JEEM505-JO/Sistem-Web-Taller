  </div>
  <!-- ./wrapper -->

  <script>
    const d = document;

    const $inputCarroceria = d.getElementById('namecarroceria'),
      $inputIDCarroceria = d.getElementById('idcarrroceria')

    d.addEventListener('keyup', e =>{
      if(e.target === $inputCarroceria){
        let TipoCarroceria = $inputCarroceria.value.toUpperCase();

        TipoCarroceria = TipoCarroceria.substring(0,1) + TipoCarroceria.substring(2,3)

        console.log(TipoCarroceria)
      }
    })


  </script>

  <script>

    const $select = d.getElementById('Marca_select')
    const $input = d.getElementById('Marca_input')
    //Boton de Accion
    const $btnAction = d.getElementById('btn_Action')
    
    const $btnNuevo = d.getElementById('btn_new')
    const $btnRegistrados = d.getElementById('btn_register')
    
    d.addEventListener('click',e => {
      if(e.target === $btnNuevo){
        $btnAction.textContent = $btnNuevo.textContent
        $select.classList.add('d-none')
        $input.classList.remove('d-none')
      }
      if(e.target === $btnRegistrados){
        $btnAction.textContent = $btnRegistrados.textContent
        
        $input.classList.add('d-none')
        $select.classList.remove('d-none')
      }
    })

  </script>
