                        <th>Id Carrocería</th>
                        <th>Carrocería</th>
                        <th>Id Clase de Vehículo</th>
                        <th>Clase de Vehículo</th>
                        <th>Acciones</th>
                      </tr>
                    </thead>
                    <tbody>
                      {{#each registros}}
