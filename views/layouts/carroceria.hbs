  <script>  
    const d = document
    const TABLE_NAME = 'Clase'

    const createSelect = (name, html) =>{
      const $select = d.createElement('select')
      $select.className = 'form-control'
      $select.setAttribute('name',name)
      $select.setAttribute('required', 'true')
      $select.innerHTML = html
      $select.value = null
      return $select
    }

    const createInput = (name) => {
      const $input = d.createElement('input')
      $input.className = 'form-control'
      $input.setAttribute('name', name)
      $input.setAttribute('required', 'true')

      return $input
    }

    const $btnAction = d.getElementById('btn_Action')
    const $btnNuevo = d.getElementById('btn_new')
    const $btnRegistrados = d.getElementById('btn_register')
    const $divInputGroupPrepend = d.querySelector('.input-group-prepend')

    const $inputIdClase = d.getElementById('idclase'),
      $inputTipoCarroceria = d.getElementById('idcarroceria'),
      $inputNameCarroceria = d.getElementById('namecarroceria')
    
    d.addEventListener('click',e => {
      if(e.target === $btnNuevo || e.target === $btnRegistrados){
        if(d.getElementById('todestroy'))
          d.getElementById('todestroy').parentNode.removeChild(d.getElementById('todestroy'))

        if(e.target === $btnNuevo){
          $btnAction.textContent = $btnNuevo.textContent

          if(d.querySelector(`select[name="${TABLE_NAME}"]`) != null)
            d.querySelector(`select[name="${TABLE_NAME}"]`).parentNode.removeChild(d.querySelector(`select[name="${TABLE_NAME}"]`))
          
          if(d.querySelector(`input[name="${TABLE_NAME}"]`) == null)
            $divInputGroupPrepend.insertAdjacentElement('afterend',createInput(TABLE_NAME))

        }else if (e.target === $btnRegistrados ){
          $btnAction.textContent = $btnRegistrados.textContent

          if (d.querySelector(`input[name=${TABLE_NAME}`) != null)
            d.querySelector(`input[name="${TABLE_NAME}"]`).parentNode.removeChild(d.querySelector(`input[name="${TABLE_NAME}"]`))
            
          if(d.querySelector(`select[name="${TABLE_NAME}"]`) == null){
            let html = `
            {{#each clasevehiculo}}
              <option value={{this.Clase}}>{{this.IDClase}}. {{this.Clase}}</option>
            {{/each}}`

            $divInputGroupPrepend.insertAdjacentElement('afterend', createSelect(TABLE_NAME,html))
          }
        } 
      }
      if(e.target.matches('.btn.btn-edit > *, .btn.btn-edit')){
        if(d.getElementById('todestroy'))
          d.getElementById('todestroy').parentNode.removeChild(d.getElementById('todestroy'))
       
        $btnAction.textContent = $btnRegistrados.textContent

          if (d.querySelector(`input[name=${TABLE_NAME}`) != null)
            d.querySelector(`input[name="${TABLE_NAME}"]`).parentNode.removeChild(d.querySelector(`input[name="${TABLE_NAME}"]`))
            
          if(d.querySelector(`select[name="${TABLE_NAME}"]`) == null){
            let html = `
            {{#each clasevehiculo}}
              <option value={{this.Clase}}>{{this.IDClase}}. {{this.Clase}}</option>
            {{/each}}`

            $divInputGroupPrepend.insertAdjacentElement('afterend', createSelect(TABLE_NAME,html))

          }
            const $select = d.querySelector('select[name="Clase"]')

            $inputTipoCarroceria.value = e.target.dataset.tipocarroceria
            $inputNameCarroceria.value = e.target.dataset.nombrecarroceria
            $inputIdClase.value = e.target.dataset.idclase

            const getOption = Array.from($select.options).find(
              (option) => (option.value) === (e.target.dataset.clase)
            )

            $select.value = getOption.value
      } if(e.target.matches('.btn.btn-delete > *, .btn.btn-delete')){
                Swal.fire({
          title: 'Esta seguro que desea eliminar este registro?',
          text: "No sera capaz de revertir esto",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#3085d6',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Si, estoy seguro',
          cancelButtonText: 'Cancelar'
        }).then((result) => {
          if (result.isConfirmed) {
            let options = {
              method: 'delete',
              headers: {
                'Content-Type': 'aplication/json;charset=utf-8'
              },
              body: e.target.dataset.tipocarroceria
            }
            const del = fetch(`http://localhost:3000/carroceria/${options.body}`, options)
              .then(() => {
                Swal.fire(
                  'Borrado!',
                  'El registro ha sido borrado.',
                  'success'
                ).then(() => {
                  window.location.reload()
                })
              })
          }
        })

      }
    })

    d.addEventListener('change', e => {
      if(e.target.matches(`select[name="${TABLE_NAME}"]`)){
        const $select = d.querySelector(`select[name="${TABLE_NAME}"]`)

        const getSelectedOption = Array.from($select.options).find(
          option => option.textContent.split('.')[1].endsWith($select.value) 
        )

        $inputIdClase.value = getSelectedOption.textContent.split('.')[0]
      } 
    })

  </script>
