    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1>Producto</h1>
            </div>
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="./">Inicio</a></li>
                <li class="breadcrumb-item active">producto</li>
              </ol>
            </div>
          </div>
        </div>
        <!-- /.container-fluid -->
      </section>

      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
            <div class="col-12">
              <div class="card-body">
                <form action="/producto" method="post">
                  <div class="card card-primary">
                    <div class="card-header">
                      <h3 id="title" class="card-title">Datos del Producto</h3>
                    </div>
                    <div class="card-body">
                      <div class="row">
                        <div class="form-group col-6">
                          <label for="CodProducto">Código del Producto</label>
                          <input name="CodProducto" readonly value="{{this.id}}"
                            class="form-control" type="text" required />
                        </div>
                        <div class="form-group col-6">
                          <label for="PrecioUnidad">Precio</label>
                          <input name="PrecioUnidad" pattern="" title="Precio solo acepta letras en Mayuscula y números"
                            class="form-control" type="number"  required />
                        </div>   
                      </div>

                      <div class="row">
                        <div class="form-group col-6">
                          <label for="NombreProducto">Nombre</label>
                          <input name="NombreProducto" title="" class="form-control" type="text" required/>
                        </div>
                        
                          <div class="form-group col-3">
                              <label for="categoria">Categoria</label>
                                <select name="categoria" class="form-control" title="Categoria" id="idcategoria"  required>
                                  {{#each categorias}}
                                    <option value={{this.IDCategoria}}>{{this.NombreCategoria}}</option>
                                  {{/each}}
                                </select>
                              </div>
                           
                              <div class="form-group col-3">
                                <label for="Stock">Stock</label>
                                <input name="Stock" title="" class="form-control" type="number" required />
                              </div>
                         </div>
                      </div>
                      
                    <div class="card-footer">
                      <button type="submit" class="btn btn-primary"><i class="nav-icon fa fa-plus pr-2"></i>Agregar</button>
                      <button type="button" class="btn btn-default float-right"><i class="nav-icon fa fa-trash pr-2"></i>Limpiar</button>
                      </div>
                    </div>
                  </form>
                </div>
              </div>

              <div class="card">
                <div class="card-header">
                  <h3 class="card-title">
                    Registro de los Datos de los Productos
                  </h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                  <table id="example2" class="table table-bordered table-hover">
                    <thead>
                      <tr>
                        <th>Código de Producto</th>
                        <th>Descripción</th>
                        <th>Id Tipo de Producto</th>
                        <th>Tipo de Producto</th>
                        <th>Precio</th>
                        <th>Acciones</th>
                      </tr>
                    </thead>
                    <tbody>
                      {{#each rows}}
                        <tr>
                          <td>{{this.CodProducto}}</td>
                          <td>{{this.NombreProducto}}</td>
                          <td>{{this.IDCategoria}}</td>
                          <td>{{this.PrecioUnidad}}</td>
                          <td>{{this.Stock}}</td>
                          <td>
                            <a href="#title" class="btn btn-edit" data-codproducto={{this.CodProducto}} data-nombre="{{this.NombreProducto}}" data-idcategoria={{this.IDCategoria}} data-precio="{{this.PrecioUnidad}}" data-stock="{{this.Stock}}">
                            <i class="nav-icon fas fa-edit" data-codproducto={{this.CodProducto}} data-nombre="{{this.NombreProducto}}" data-idcategoria={{this.IDCategoria}} data-precio="{{this.PrecioUnidad}}" data-stock="{{this.Stock}}"></i>
                          </a>
                          <button class="btn btn-delete" data-codproducto={{this.CodProducto}}>
                            <i class="nav-icon fas fa-trash" style="flex: 1;" data-codproducto={{this.CodProducto}}></i>
                          </button>
                          </td>
                        </tr>
                      {{/each}}
                    </tbody>
                  </table>
                </div>
                <!-- /.card-body -->
              </div>
              <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.container-fluid -->
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
      <!-- Control sidebar content goes here -->
    </aside>
    <!-- /.control-sidebar -->
