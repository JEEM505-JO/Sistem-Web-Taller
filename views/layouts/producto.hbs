  {{>footer}}

  <!-- Page specific script -->
   <script>
    const d = document;
    const $select = d.getElementById('Tipo_Select')
    const $input = d.getElementById('Tipo_input')
    //Boton de Accion
    const $btnAction = d.getElementById('btn_Action')
    
    const $btnNuevo = d.getElementById('btn_new')
    const $btnRegistrados = d.getElementById('btn_register')

    //Actualizar
    const $inputCodProducto = d.querySelector('input[name="CodProducto"]'),
      $inputNombreProducto = d.querySelector('input[name="NombreProducto"]'),
      $inputPrecioUnidad = d.querySelector('input[name="PrecioUnidad"]'),
      $selectCategoria = d.querySelector('select[name="categoria"]'),
      $inputStock = d.querySelector('input[name="Stock"]')
    
    d.addEventListener('click',e => {
      if(e.target === $btnNuevo){
        $btnAction.textContent = $btnNuevo.textContent

        $select.classList.add('d-none')
        $input.classList.remove('d-none')
      }
      if(e.target === $btnRegistrados){
        $btnAction.textContent = $btnRegistrados.textContent
        
        $input.classList.add('d-none')
        $select.classList.remove('d-none')
      }
      if (e.target.matches('.btn.btn-edit>*, .btn.btn-edit')) {
        $inputCodProducto.value = e.target.dataset.codproducto
        $inputNombreProducto.value = e.target.dataset.nombre
        $inputPrecioUnidad.value = e.target.dataset.precio
        $selectCategoria.value = e.target.dataset.idcategoria
        $inputStock.value = e.target.dataset.stock
      }if(e.target.matches('.btn.btn-delete > *, .btn.btn-delete')){
                Swal.fire({
          title: 'Esta seguro que desea eliminar este registro?',
          text: "No sera capaz de revertir esto",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#3085d6',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Si, estoy seguro',
          cancelButtonText: 'Cancelar'
        }).then((result) => {
          if (result.isConfirmed) {
            let options = {
              method: 'delete',
              headers: {
                'Content-Type': 'aplication/json;charset=utf-8'
              },
              body: e.target.dataset.codproducto
            }
            const del = fetch(`http://localhost:3000/prodcuto/${options.body}`, options)
              .then(() => {
                Swal.fire(
                  'Borrado!',
                  'El registro ha sido borrado.',
                  'success'
                ).then(() => {
                  window.location.reload()
                })
              })
          }
        })
      }
    })

  </script>


