                            </div>
                          </div>
                          <input type="text" name="id" style="display: none;">
                          <div class="row">
                            <div class="form-group col-6">
                              <label for="Placa">Placa</label>
                              <div class="input-group">
                                <div class="input-group-prepend">
                                  <a href="/vehiculo" type="button" class="btn btn-outline-info">
                                    <i class="fa fa-plus nav-icon"></i>
                                  </a>
                                </div>
                                <select name="Placa" required class="form-control" title="Placa" id="idPlaca">
                                  {{#each placas}}
                                  <option value={{this.Placa}}>{{this.Placa}}</option>
                                  {{/each}}
                                </select>
                              </div>
                            </div>
                            <div class="form-group col-6">
                              <label for="mecanico">Mecanico</label>
                              <div class="input-group">
                                <div class="input-group-prepend">
