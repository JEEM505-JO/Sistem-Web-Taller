                         data-codigo={{this.CodCheckIN}} 
                         data-placa={{this.Placa}}
                         data-fecha="{{this.FechaIngreso}}"
                         data-observacion="{{ this.Observacion }}"
                         data-mecanico="{{this.Mecanico}}"
