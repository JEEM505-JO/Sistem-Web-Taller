  <script>
    const d = document

    const $inputObservacion = d.querySelector('input[name="Observacion"]'),
      $selectPlaca = d.querySelector('select[name="Placa"]'),
      $selectMecanico = d.querySelector('select[name="mecanico"]'),
      $dateFechaIngre = d.querySelector('input[name="FechaIngreso"]'),
      $selectSintoma = d.querySelector('select[name="Sintoma"]'),
      $inputId = d.querySelector('input[name="id"]')

    d.addEventListener('click', e =>{ 
      if(e.target.matches('.btn.btn-edit > *, .btn.btn-edit')){
        $inputObservacion.value = e.target.dataset.observacion 
        $selectPlaca.value = e.target.dataset.placa
        $dateFechaIngre.value = e.target.dataset.fecha 
        $inputId.value = e.target.dataset.codigo

        const getMecanico = Array.from($selectMecanico.options).find(option => option.textContent === e.target.dataset.mecanico)
        console.log(getMecanico)
        $selectMecanico.value = getMecanico.value
      
        const getSintoma = Array.from($selectSintoma.options).find(option => option.textContent === e.target.dataset.sintoma)
        $selectSintoma.value = getSintoma.value
      }
      if(e.target.matches('.btn.btn-delete >*, .btn.btn-delete')){
        Swal.fire({
          title: 'Esta seguro que desea eliminar este registro?',
          text: "No sera capaz de revertir esto",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#3085d6',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Si, estoy seguro',
          cancelButtonText: 'Cancelar'
        }).then((result) => {
          if (result.isConfirmed) {
            let options = {
              method: 'delete',
              headers: {
                'Content-Type': 'aplication/json;charset=utf-8'
              },
              body: e.target.dataset.codigo
            }
            const del = fetch(`http://localhost:3000/checkin/${options.body}`, options)
              .then(() => {
                Swal.fire(
                  'Borrado!',
                  'El registro ha sido borrado.',
                  'success'
                ).then(() => {
                  window.location.reload()
                })
              })
          }
        })

      }
    })
  </script>
