      <!-- Content Header (Page header) -->
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1>Color</h1>
            </div>
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="./">Vehículo</a></li>
                <li class="breadcrumb-item active">Color</li>
              </ol>
            </div>
          </div>
        </div><!-- /.container-fluid -->
      </section>

      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-12">
              <div class="row">
                <div class="card-body">
                <form action="/color" method="post">
                  <div>
                    <div class="">
                      <div class="card card-primary">
                        <div class="card-header">
                          <h3 id="title"  class="card-title">Seleccionar Color</h3>
                        </div>

                        <div class="card-body">
                          <div class="form-group mb-4">
                            <label for="NombreColor">Nombre</label> 
                            <input name="id" type="text" style="display: none;">
                            <input type="text" name="NombreColor" title="Nombre solo admite letras" class="form-control">
                          </div> 
                          <div class="row" style="justify-content: space-around!important;">
                            <div class="form-group">
                              <label for="foto">Utilizar fotografía</label>
                              <input name="foto" pattern="" title="Nombre solo acepta letras y espacios en blanco"
                                class="form-control-file" style="cursor:pointer;" id="inpFile" type="file">
                            </div>

                            
                            <div class="form-group float-right">
                              <label for="color">Color</label>
                              <input id="idcolor" name="color" pattern="" title="Color" class="form-control-lg  p-1 ml-2" type="color">
                            </div>
                          </div>



                          <style>
                            .form-control-file:hover{
                              color: darkblue;
                            }
                            .image-preview{
                              border: 2px dashed gray;
                              display: flex;
                              align-items: center;
                              justify-content: center;
                              font-weight: bold;
                              color: rgba(128, 128, 128, 0.63);
                              margin-bottom: 1.25rem;
                            }
                            .image-preview__image{
                              display: none;
                              width: 100%;
                              max-width: 270px;
                            }
                          </style>
                          <div id="image-preview" class="image-preview card-body p-5" style="margin: 2.25rem;" id="imgPreview">
                            <img src="" alt="Image preview" class="image-preview__image">
                            <span class="image-preview__default-text">Vista previa de imagen</span>
                          </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary"> <i class="fa fa-plus nav-icon pr-2"></i>
                              Agregar</button>
                            <button id="idlimpiar" type="button" class="btn btn-default float-right" onclick="limpiar()"> 
                              <i class="fa fa-trash nav-icon pr-2"></i>Limpiar</button>
                        </div>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
              <div class="card-body">
                <div class="card">

                <div class="card-header">
                  <h3 class="card-title">Registro de Colores</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                  <table id="example2" class="table table-bordered table-responsive table-hover" style="max-height: 425px;">
                    <thead>
                      <tr>
                        <th>Código</th>
                        <th>Color</th>
                        <th>Hex</th>
                        <th>Acciones</th>
                      </tr>
                    </thead>
                    <tbody>
                      {{#each rows}}
                        <tr>
                          <td>{{this.CodigoColor}}</td>
                          <td>{{this.NombreColor}}</td>
                          <td>{{this.CodHex}}</td>
                          <td>
                            <a href="#title" class="btn btn-edit" data-id={{this.CodigoColor}} data-nombrecolor={{this.NombreColor}} data-codhex={{this.CodHex}}>
                              <i class="nav-icon fas fa-edit" data-id={{this.CodigoColor}} data-nombrecolor={{this.NombreColor}} data-codhex={{this.CodHex}}></i>
                            </a>
                          <button class="btn btn-delete" data-id={{this.CodigoColor}}>
                            <i class="nav-icon fas fa-trash" style="flex: 1;" data-id={{this.CodigoColor}}></i>
                          </button></td>
                        </tr>
                      {{/each}}
                    </tbody>
                  </table>
                </div>
                </div>
                <!-- /.card-body -->
              </div>
              </div>
              <!-- /.card -->
            </div>
            <!-- /.col -->
          </div>
          <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->


    <footer class="main-footer">
      <strong>Copyright &copy; 2022 <a href="#">Taller Hno Flores &REG;</a>.</strong>
      Todos los derechos reservados
      <div class="float-right d-none d-sm-inline-block">
        <b>Version</b> 1.0.0
      </div>
    </footer>
  
      <!-- Control Sidebar -->
      <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
      </aside>
      <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->
  
  
  <script>
    const d = document
    const $inpFile = document.getElementById('inpFile')
    const $previewContainer = document.getElementById('image-preview')
    const $previewImage = $previewContainer.querySelector('.image-preview__image')
    const $previewDefaultText = $previewContainer.querySelector('.image-preview__default-text')
    const $limpiar = document.getElementById('idlimpiar')
    const $colorPicker = document.getElementById('idcolor')

    const $nombreColor = d.querySelector('input[name="NombreColor"]'),
      $codHex = d.querySelector('input[name="color"]'),
      $codigoColor = d.querySelector('input[name="id"]')

    function limpiar(){
      console.log('limpiando')
      $colorPicker.value = "#000"
      $inpFile.value = null
      $previewDefaultText.style.display = null;
      $previewImage.style.display = null;
      $nombreColor.value = null;
      $codigoColor.value = null;

    }

    $inpFile.addEventListener('change', function(){
      const file = this.files[0];

      if(file){
        const reader = new FileReader()

        $previewDefaultText.style.display = "none";
        $previewImage.style.display = "block";
      
        reader.addEventListener('load', function(){
          $previewImage.setAttribute("src", this.result)
        })

        reader.readAsDataURL(file)

      }else{

        $previewDefaultText.style.display = null;
        $previewImage.style.display = null;
      }
    })

    d.addEventListener('click', e => {
      if(e.target.matches('.btn.btn-edit >*, .btn.btn-edit')){
        $nombreColor.value = e.target.dataset.nombrecolor
        $codHex.value = e.target.dataset.codhex
        $codigoColor.value = e.target.dataset.id
      
      }

      if(e.target.matches('.btn.btn-delete > *, .btn.btn-delete')){
        Swal.fire({
          title: 'Esta seguro que desea eliminar este registro?',
          text: "No sera capaz de revertir esto",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#3085d6',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Si, estoy seguro',
          cancelButtonText: 'Cancelar'
        }).then((result) => {
          if (result.isConfirmed) {
            let options = {
              method: 'delete',
              headers: {
                'Content-Type': 'aplication/json;charset=utf-8'
              },
              body: e.target.dataset.id
            }
            const del = fetch(`http://localhost:3000/color/${options.body}`, options)
              .then(() => {
                Swal.fire(
                  'Borrado!',
                  'El registro ha sido borrado.',
                  'success'
                ).then(() => {
                  window.location.reload()
                })
              })
          }
        })
      }

    })

  </script>
